@model PetStore_web.Models.Pet
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Details</h2>
    <div class="row">
            <div class="col-md-4">
                <img src="@Html.DisplayFor(model => model.smlPicture)" class="pet_store_image_big"/><br />
                <div class="price">$@Html.DisplayFor(model => model.price)</div>
            </div>
            <div class="col-md-8">
                <div class="pet_store_title">@Html.DisplayFor(model => model.name)</div>
                @Html.DisplayFor(model => model.description)
            </div>
    </div>
     
</div>

